{% macro modalBuilder(modal_id, modal_title, modal_content) %}
    <div class="modal" id="{{ modal_id }}">
        <div class="modal-content">
            <a href="#" class="modal-close">&times</a>
            <h1>{{ modal_title }}</h1>
            {{ modal_content|raw }}
        </div>
    </div>    
{% endmacro %}

