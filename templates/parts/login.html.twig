<form class="log-form" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            {% trans %}Vous êtes connecté en tant que{% endtrans %} {{ app.user.userIdentifier }}, <a href="{{ path('logout') }}">{% trans %}Se déconneccter{% endtrans %}</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">{% trans %}Connexion{% endtrans %}</h1>
    <div class="form-block">
        <label for="inputEmail">{% trans %}Mail{% endtrans %}</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="registerFormInput" autocomplete="email" required autofocus>
    </div>

    <div class="form-block">
    <label for="inputPassword">{% trans %}Mot de passe{% endtrans %}</label>
    <input type="password" name="password" id="inputPassword" class="registerFormInput" autocomplete="current-password" required>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="form_submit logBtn" type="submit">
        {% trans %}Connexion{% endtrans %}
    </button>

    <div class="rememberLog">
        <a href="#Inscription">{{"Pas encore de compte ?"|trans}}</a>
    </div>

</form>