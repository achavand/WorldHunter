{% extends 'disconnectedBase.html.twig' %}

{% block title %}
	{% trans %}Scores{% endtrans %}
{% endblock %}

{% block body %}
	<div class="disconnect-container">
		<div>
			<h1 class="textCenter">{% trans %}Scores{% endtrans %}</h1>
			<div class="d-scoresList">

				<table>
					<thead>
						<th>{% trans %}Personnage{% endtrans %}</th>
						<th>{% trans %}Joueur{% endtrans %}</th>
						<th>{% trans %}Serveur{% endtrans %}</th>
						<th>{% trans %}Level{% endtrans %}</th>
					</thead>
					<tbody>
						{% for score in scores %}
							<tr>
								<td>{{ score.getName() }}</td>
								<td>{{ score.getUserPersonnage().getUsername() }}</td>
								<td>{{ score.getServeur() }}</td>
								<td>{{ score.getLevel() }}</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				{{ knp_pagination_render(scores) }}
			</div>
		</div>
	</div>
{% endblock %}

